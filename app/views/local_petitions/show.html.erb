<h1 class="page-title">
  Popular open petitions in the parish of <%= @parish.name %>
</h1>

<p class="heading-link">
  <%= link_to "View all popular petitions in #{@parish.name}", all_local_petition_path(@parish), class: 'view-all' %>
</p>

<div class="section-panel local-petitions">
  <% if @petitions.empty? %>
    <p>No petitions are popular in your parish.</p>
  <% else %>
    <ol>
      <% @petitions.each do |petition| %>
        <li class="petition-item petition-<%= petition.state %>">
          <h3><%= link_to petition.action, petition_path(petition) %></h3>
          <p><%= signature_count(:in_your_parish, petition.parish_signature_count, parish: @parish.name) %><br/>
          (<%= signature_count(:in_total, petition.signature_count) %>)</p>
        </li>
      <% end -%>
    </ol>
  <% end %>
</div>

<ul class="petition-meta">
  <li class="meta-json">
    <span class="note">Get this data in <%= link_to 'JSON', local_petition_path(@parish, :json) %> or <%= link_to 'CSV', local_petition_path(@parish, :csv) %> format</span>
  </li>
</ul>
